.projectOverview(canny-mod="projectOverview")
  h1 Project overview
  .projectOverview-list
    .projectOverview-back-btn.octicon.octicon-mail-reply.js-selectParentDirectoryButton(title="show parent directory")
    table
      tbody(canny-mod="repeat" canny-var="{'for':'item','in':'canny.projectOverview.setRenderProjectsAndDirectoriesListFunction'}")
        tr(if="item.dir")
          td.octicon.octicon-file-directory(on-click="item.openProjectListItem", title="Open directory") {{item.name}}
          td.octicon.octicon-trashcan
        tr(if-not="item.dir")
          td.octicon.octicon-file-code(on-click="item.openProjectListItem", title="Open '{{item.name}}' project") {{item.name}}
          td.octicon.octicon-trashcan

  .projectOverview-buttons
      button.button.js-createFolderButton.octicon.octicon-file-directory Create folder
      button.button.js-createProjectButton.octicon.octicon-file-code Create project
      button.button.js-deleteProjectsButton.octicon.octicon-trashcan Delete projects

  // remove this if we can go live
  div(style="margin-top:3em")
    p(style="color: #ee0000;font-size:200%;") You are using the new translation tool!
    p The old translation tool is still available
      a(href="http://translation.office.gameduell.de:8000") here