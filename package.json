{
  "name": "translatron",
  "auth": "eightyfour",
  "email": "eightyfour@thinkuseful.de",
  "version": "0.7.4",
  "readmeFilename": "README.md",
  "engines": {
    "node": ">= v4.2.3 && <= 5.9.1"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.14.2",
    "connect-busboy": "0.0.2",
    "cookie-parser": "1.4.3",
    "dnode": "1.2.2",
    "express": "4.14.0",
    "express-session": "1.14.1",
    "jade": "1.11.0",
    "passport": "0.3.2",
    "passport-ldapauth": "0.5.0",
    "shoe": "0.0.15"
  },
  "config": {
    "port": "3000",
    "enableAuth": true
  },
  "main": "translatron.js",
  "watch": {
    "buildjs-dev": {
      "patterns": ["lib"],
      "extensions": "js"
    },
    "less": {
      "patterns": ["lib"],
      "extensions": "less"
    }
  },
  "scripts": {
    "buildjs": "browserify lib/client/js/main.js -o dist/js/translatron.js && browserify lib/client/js/login.js -o dist/js/translatron-login.js",
    "buildjs-dev": "browserify --debug lib/client/js/main.js -o dist/js/translatron.js && browserify --debug lib/client/js/login.js -o dist/js/translatron-login.js",
    "less": "lessc lib/client/less/main.less dist/css/translatron.css",
    "test": "jasmine && karma start karma.conf.js",
    "prestart": "npm run buildjs-dev && npm run less",
    "start": "node app.js",
    "devsetup": "bower install",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "bower": "1.7.9",
    "browserify": "^13.1.0",
    "canny": "0.1.10",
    "canny-cookieManager-lib": "1.1.1",
    "dom-opts": "git://github.com/eightyfour/dom-opts.git",
    "jasmine": "2.4.1",
    "jasmine-core": "2.4.1",
    "karma": "0.13.22",
    "karma-chrome-launcher": "1.0.1",
    "karma-coverage": "0.5.5",
    "karma-jasmine": "0.3.8",
    "karma-phantomjs-launcher": "1.0.2",
    "less": "2.7.1",
    "npm-watch": "^0.1.6",
    "phantomjs": "1.9.20",
    "watchify": "3.7.0"
  }
}
