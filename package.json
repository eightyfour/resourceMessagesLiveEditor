{
  "name": "translatron",
  "auth": "eightyfour",
  "email": "eightyfour@thinkuseful.de",
  "version": "0.9.3",
  "readmeFilename": "README.md",
  "engines": {
    "node": ">= v4.2.3 && <= 5.9.1"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "connect-busboy": "^0.0.2",
    "cookie-parser": "^1.4.3",
    "dnode": "^1.2.2",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "passport": "^0.4.0",
    "passport-ldapauth": "^2.0.0",
    "pug": "^2.0.0-rc.4",
    "shoe": "^0.0.15"
  },
  "config": {
    "port": "3000",
    "enableAuth": true
  },
  "main": "translatron.js",
  "watch": {
    "start": {
      "patterns": [
        "./"
      ],
      "extensions": "md"
    },
    "buildjs-dev": {
      "patterns": [
        "lib"
      ],
      "extensions": "js"
    },
    "less": {
      "patterns": [
        "lib"
      ],
      "extensions": "less"
    }
  },
  "scripts": {
    "buildjs": "browserify lib/client/js/main.js -o dist/js/translatron.js && browserify lib/client/js/login.js -o dist/js/translatron-login.js",
    "buildjs-dev": "browserify --debug lib/client/js/main.js -o dist/js/translatron.js && browserify --debug lib/client/js/login.js -o dist/js/translatron-login.js",
    "less": "lessc lib/client/less/main.less dist/css/translatron.css",
    "test": "jasmine && karma start karma.conf.js",
    "prestart": "npm run buildjs-dev && npm run less",
    "start": "node app.js",
    "devsetup": "bower install",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "bower": "^1.8.2",
    "browserify": "^15.2.0",
    "canny": "^0.2.1",
    "canny-cookieManager-lib": "^1.1.1",
    "dom-opts": "git://github.com/eightyfour/dom-opts.git",
    "jasmine": "^2.4.1",
    "jasmine-core": "^2.4.1",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "less": "^2.7.3",
    "npm-watch": "^0.3.0",
    "phantomjs-prebuilt": "^2.1.16",
    "watchify": "^3.10.0"
  },
  "repository": {
    "url": "https://github.com/gameduell/translatron.git"
  }
}
